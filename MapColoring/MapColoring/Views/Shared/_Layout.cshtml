<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/main.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Pakistan</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/SA">South Africa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Austrailia">Austrailia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Canada">Canada</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        <div id="map-content">
            @RenderBody()
        </div>
        <div id="control-content">
            <h2>Controls</h2>

            Enter number of colors to fill:
            <br />
            <input type="number" id="colorCount" />
            <br />
            <br />
            <input type="button" onclick="SetColors()" value="Set Colors" />


            <br />
            <br />
            <br />


            <div id="colorsForm"></div>
            <input type="button" value="FIll Colors" onclick="FillColors()" />

            <br />
            <br />

            <label id="noSolution" class="txtDanger"><b>* Solution not possible!</b></label>

        </div>

    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>